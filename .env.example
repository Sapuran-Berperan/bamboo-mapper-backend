ENVIRONMENT=dev
PORT=8080
DATABASE_URL_DEV=postgres://user:password@localhost:5432/bamboo_mapper?sslmode=disable
DATABASE_URL=postgres://user:password@prod-host:5432/bamboo_mapper?sslmode=require
DATABASE_URL_TEST=postgres://user:password@test-host:5432/bamboo_mapper?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=168h

# Google Drive Configuration (optional - for image uploads)
# Run 'go run scripts/gdrive_auth.go' to generate the token file
GDRIVE_CREDENTIALS_PATH=./credentials/gdrive-oauth.json
GDRIVE_TOKEN_PATH=./credentials/gdrive-token.json
GDRIVE_FOLDER_ID=your-folder-id
